<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstpage"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/geonius"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_study"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#042B4A"
        android:text="STUDY!"
        android:textColor="#FFFCFC"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_exam2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_exam1"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="91dp"
        android:backgroundTint="#042B4A"
        android:text="EXAM 1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/btn_exam2"
        app:layout_constraintEnd_toStartOf="@+id/btn_exam2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_exam2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/zilla_slab_highlight"
        android:text="WELCOME TO GEONIUS!"
        android:textAlignment="center"
        android:textColor="#0F2225"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_study"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_exam2"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="#042B4A"
        android:text="EXAM 2"
        android:textColor="#FFFBFB"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_exam1"
        app:layout_constraintTop_toBottomOf="@+id/btn_study"
        tools:ignore="MissingConstraints"
        tools:text="EXAM 2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Cem Sarıçam"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_exam2" />

</androidx.constraintlayout.widget.ConstraintLayout>